{
	"name": "@evojs/cli",
	"version": "0.0.2",
	"description": "Nodejs evojs cli",
	"main": "bin/cli.js",
	"license": "MIT",
	"bin": {
		"evojs": "bin/cli.js"
	},
	"scripts": {
		"prebuild": "rm -rf dist/",
		"build": "tsc --diagnostics --project tsconfig.build.json && node tools/build.js",
		"prepublishOnly": "npm run build && npm run test && node tools/prepublish.js",
		"release": "RELEASE_MODE=1 npm run prepublishOnly && npm publish --access public dist/",
		"test": "jest --coverage --detectOpenHandles",
		"fix": "eslint \"src/**/*.ts\" --fix --ext .ts",
		"lint": "eslint \"src/**/*.ts\" -f codeframe"
	},
	"dependencies": {
		"@evojs/http": "^0.2.1",
		"@evojs/validator": "^0.1.0",
		"commander": "^6.2.1",
		"content-type": "^1.0.4",
		"form-data": "^3.0.0",
		"glob": "^7.1.6",
		"inquirer": "^7.3.3",
		"reflect-metadata": "^0.1.13",
		"semver": "^7.3.4",
		"url": "^0.11.0"
	},
	"devDependencies": {
		"@evojs/eslint-plugin": "^0.0.7",
		"@types/content-type": "^1.1.3",
		"@types/glob": "^7.1.3",
		"@types/jest": "^26.0.19",
		"@types/node": "^14.14.14",
		"@types/semver": "^7.3.4",
		"eslint": "^7.16.0",
		"jest": "^26.6.3",
		"ts-jest": "^26.4.4",
		"typescript": "^4.1.3"
	},
	"jest": {
		"collectCoverage": true,
		"collectCoverageFrom": [
			"src/**/*.ts"
		],
		"moduleFileExtensions": [
			"js",
			"ts"
		],
		"rootDir": "./",
		"testEnvironment": "node",
		"testRegex": ".spec.ts$",
		"transform": {
			"^.+\\.(ts|js)$": "ts-jest"
		},
		"globals": {
			"ts-jest": {
				"tsconfig": "tsconfig.spec.json"
			}
		}
	},
	"nodemonConfig": {
		"ignore": [
			".git/",
			".vscode/",
			"node_modules/",
			"dist/",
			"coverage/"
		],
		"exec": "npm run test",
		"ext": "ts"
	},
	"author": {
		"name": "Shamil Sultanov",
		"email": "shamil.amirovich@gmail.com"
	},
	"keywords": [
		"nodejs",
		"evojs",
		"cli"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/evotool/js-cli.git"
	},
	"bugs": {
		"url": "https://github.com/evotool/js-cli/issues"
	},
	"homepage": "https://github.com/evotool/js-cli#readme"
}
